# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index()

# Games list
GET     /games		            controllers.Application.listGames(p:Int ?= 0)

# Create a game
#GET     /games/new	            controllers.Application.createGame()
#POST    /games		            controllers.Application.saveGame()

# Edit an existing game
#GET     /games/:id              controllers.Application.editGame(id:Long)
#POST    /games/:id              controllers.Application.updateGame(id:Long)

# Find an existing game
#GET     /games/id			    controllers.Application.searchGame(key:String, value:String)

# Delete a game
#POST    /games/:id/delete       controllers.Application.deleteGame(id:Long)

# Teams list
GET     /teams		            controllers.Application.listTeams(p:Int ?= 0, s ?= "fullName", o ?= "asc", f ?= "")

# Create a team
GET     /teams/new	            controllers.Application.createTeam()
POST    /teams		            controllers.Application.saveTeam()

# Edit an existing team
GET     /teams/:id              controllers.Application.editTeam(id:Long)
POST    /teams/:id              controllers.Application.updateTeam(id:Long)

# Find an existing team
GET     /teams/id			    controllers.Application.searchTeam(key:String, value:String)

# Delete a team
POST    /teams/:id/delete       controllers.Application.deleteTeam(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.at(path="/public", file)
